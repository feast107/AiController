<Window x:Class="LAX.Desktop.Wpf.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAX.Desktop.Wpf"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="ConfigWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="20,20">
            <TextBox Width="Auto" hc:InfoElement.TitleWidth="30" hc:InfoElement.TitlePlacement="Top" hc:InfoElement.Title="地址" Style="{StaticResource TextBoxExtend}" 
                     Margin="0,0,0,5" Text="" Name="Location"/>
            <TextBox Width="Auto" hc:InfoElement.TitleWidth="30" hc:InfoElement.TitlePlacement="Top" hc:InfoElement.Title="身份" Style="{StaticResource TextBoxExtend}" 
                     Margin="0,0,0,5" Text="" Name="Identifier"/>
            <TextBox Width="Auto" hc:InfoElement.TitleWidth="30" hc:InfoElement.TitlePlacement="Top" hc:InfoElement.Title="描述" Style="{StaticResource TextBoxExtend}" 
                     Margin="0,0,0,0" Text="" Name="Description"/>
            <ToggleButton Style="{StaticResource ToggleButtonLoadingPrimary}" Name="Connect" IsChecked="False" Content="连接" Width="120" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
